{
  "expo": {
    "name": "Kaptur",
    "slug": "kaptur-app",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/images/kaptur_icon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#000000",

    "splash": {
      "image": "./assets/images/kaptur_splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maximekirch.kaptur",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Kaptur a besoin de votre micro pour enregistrer vos notes vocales à analyser.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIUserInterfaceStyle": "Dark"
      }
    },

    "android": {
      "package": "com.maximekirch.kaptur",
      "permissions": [
        "AUDIO_RECORDING",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },

    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Kaptur a besoin de votre micro pour enregistrer vos notes vocales à analyser."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "da92aaff-40ce-4586-9ded-87b0be77e9a6"
      }
    },
    "owner": "maximekirch"
  }
}
